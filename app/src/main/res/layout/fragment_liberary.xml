<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentliberary">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/corner"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Nom -->
            <TextView
                android:id="@+id/nom_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/nom_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Prénom -->
            <TextView
                android:id="@+id/prenom_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prénom:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/prenom_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Numéro de téléphone -->
            <TextView
                android:id="@+id/telephone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numéro de téléphone:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/telephone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Modèle de conduite -->
            <TextView
                android:id="@+id/modele_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modèle de conduite:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/modele_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Numéro de camion -->
            <TextView
                android:id="@+id/numero_camion_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numéro de camion:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/numero_camion_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Matricule du camion -->
            <TextView
                android:id="@+id/matricule_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matricule du camion:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/matricule_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Adresse domicile -->
            <TextView
                android:id="@+id/adresse_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adresse domicile:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/adresse_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="8dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"/>


        </LinearLayout>

</FrameLayout>

